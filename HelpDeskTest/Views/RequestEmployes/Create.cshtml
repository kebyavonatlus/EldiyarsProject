@model HelpDeskTest.Models.RequestEmploye

@{
    ViewBag.Title = "Create";
}

<h2>На согласование</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Выберите кому отправить на согласование</h4>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="RequestId">Номер заявки</label>
            <div class="col-md-10">
                <input name="RequestId" class="form-control text-box single-line" id="RequestId" type="number" value="@ViewBag.reqId" data-val-required="Требуется поле ID заявки." data-val-number="Значением поля ID заявки должно быть число." data-val="true" >
                <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="RequestId"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EmployeId, ViewBag.Employes as SelectList)
                @Html.ValidationMessageFor(model => model.EmployeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
     

<div>
    @Html.ActionLink("На главную", "Index", "AllRequest")
</div>
